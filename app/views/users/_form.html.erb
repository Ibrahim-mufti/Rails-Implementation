<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <section class="py-4">
    <div class="container max-w-[500px] mx-auto text-left p-9 shadow-2xl rounded-[10px]">
      
      <div class="mx-4">
        <%= form.number_field :user_auth_no, value: current_authentication.id, id: :User_user_auth_no, class:"w-[100%] text-xl mx-auto bg-slate-700 mb-3 py-2 rounded-[6px] outline-none border-none px-4" %>
      </div>
     <div class="mx-4">
        <%= form.label :phone_number, style: "display: block", class:"text-xl mb-3" %>
        <%= form.number_field :phone_number, class:"w-[100%] text-xl mx-auto bg-slate-700 mb-3 py-2 rounded-[6px] outline-none border-none px-4" %>
    </div>

      <div class="mx-4">
        <%= form.label :first_name, style: "display: block", class:"text-xl mb-3" %>
        <%= form.text_field :first_name, class:"w-[100%] text-xl mx-auto bg-slate-700 mb-3 py-2 rounded-[6px] outline-none border-none px-4"%>
      </div>

      <div class="mx-4">
        <%= form.label :last_name, style: "display: block", class:"text-xl mb-3" %>
        <%= form.text_field :last_name, class:"w-[100%] text-xl mx-auto bg-slate-700 mb-3 py-2 rounded-[6px] outline-none border-none px-4"%>
      </div>

      <div class="mx-4">
        <%= form.label :Email, style: "display: block", class:"text-xl mb-3" %>
        <%= form.text_field :Email, class:"w-[100%] text-xl mx-auto bg-slate-700 mb-3 py-2 rounded-[6px] outline-none border-none px-4"%>
      </div>
      <div class="text-right mt-2">
        <%=  form.submit class:"cursor-pointer hover:bg-slate-700 transition-colors duration-300 ease-in py-2 px-5 rounded-[6px]"%>
      </div>
    </div>
  </section>
<% end %>
